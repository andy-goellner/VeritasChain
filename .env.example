# Example environment variables for local development
# Copy this file to `.env` and fill in secret values before running the app.

# Discord bot token
DISCORD_TOKEN=

# Application Postgres (matches `supabase-db` in docker-compose.yml)
# Example for local Docker compose: postgres://supabase_admin:supabase_password@localhost:5434/veritaschain
DATABASE_URL=postgresql://supabase_admin:supabase_password@localhost:5434/veritaschain

# Optional: separate Temporal DB URL if you want the worker to initialize or inspect
TEMPORAL_DB_URL=postgresql://temporal:temporal@localhost:5433/temporal

# Temporal connection
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default

# Ethereum / EAS
# Private key used by the server to sign transactions (0x-prefixed). Keep this secret.
PRIVATE_KEY=0x
EAS_SCHEMA_UID=

# Supabase (optional local values if you run full Supabase stack)
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Logging
LOG_LEVEL=info

# Other app-specific settings can go below
